<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.davidkerns.infosecurity_android_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PasswordGeneratorActivity"
            android:label="@string/title_activity_password_generator"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PasswordValidatorActivity"
            android:label="@string/title_activity_password_validator"
            android:theme="@style/AppTheme" />
    </application>

</manifest>
